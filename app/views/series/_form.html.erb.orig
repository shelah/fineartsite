<%= form_for @series, :html => { :multipart => true } do |f| %>
  <% if @series.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@series.errors.count, "error") %> prohibited this series from being saved:</h2>

      <ul>
      <% @series.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :begin_date %><br />
    <%= f.date_select( :begin_date, :start_year => 1980, :end_year => Time.now.year ) %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select( :end_date, :include_blank => true, :start_year => 1980, :end_year => Time.now.year ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
